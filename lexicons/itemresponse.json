{
  "lexicon": 1,
  "id": "irt.example.com",
  "defs": {
    "test": {
      "type": "record",
      "description": "A test definition (metadata only).",
      "required": ["id", "title", "description"],
      "properties": {
        "id": {
          "type": "string",
          "format": "at-identifier",
          "description": "Unique identifier for the test."
        },
        "title": {
          "type": "string",
          "description": "Human-readable title of the test."
        },
        "description": {
          "type": "string",
          "description": "Brief description of the test."
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Tags for categorization (e.g., ['math', 'algebra'])."
        },
        "createdAt": {
          "type": "string",
          "format": "datetime",
          "description": "When the test was created."
        }
      }
    },
    "question": {
      "type": "record",
      "description": "A reusable question (content not federated).",
      "required": ["id", "questionType"],
      "properties": {
        "id": {
          "type": "string",
          "format": "at-identifier",
          "description": "Unique identifier for the question."
        },
        "questionType": {
          "type": "string",
          "enum": ["open", "multipleChoice"],
          "description": "Type of question: 'open' (free response) or 'multipleChoice'."
        },
        "options": {
          "type": "array",
          "items": { "type": "string" },
          "description": "For multiple-choice questions: list of option IDs (e.g., ['opt1', 'opt2']). Actual option text is NOT federated."
        }
      }
    },
    "testQuestion": {
      "type": "record",
      "description": "Links a question to a test (like a deck).",
      "required": ["testId", "questionId"],
      "properties": {
        "testId": {
          "type": "string",
          "format": "at-identifier",
          "description": "Reference to the test."
        },
        "questionId": {
          "type": "string",
          "format": "at-identifier",
          "description": "Reference to the question."
        }
      }
    },
    "response": {
      "type": "record",
      "description": "A user's response to a question in a test.",
      "required": ["user", "questionId", "testId", "isCorrect"],
      "properties": {
        "user": {
          "type": "string",
          "format": "did",
          "description": "DID of the user who answered."
        },
        "questionId": {
          "type": "string",
          "format": "at-identifier",
          "description": "Reference to the question."
        },
        "testId": {
          "type": "string",
          "format": "at-identifier",
          "description": "Reference to the test."
        },
        "isCorrect": {
          "type": "boolean",
          "description": "Whether the answer was correct."
        },
        "selectedOption": {
          "type": "string",
          "description": "For multiple-choice questions: the ID of the selected option (e.g., 'opt2')."
        },
        "timestamp": {
          "type": "string",
          "format": "datetime",
          "description": "When the response was recorded."
        }
      }
    }
  }
}
