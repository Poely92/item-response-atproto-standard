{
  "lexicon": 1,
  "id": "irt.example.com",
  "defs": {
    "QuestionBank": {
      "type": "record",
      "description": "A test (deck) definition, including metadata and item ordering.",
      "required": ["id", "title", "description", "itemOrder"],
      "properties": {
        "id": {
          "type": "string",
          "format": "at-identifier",
          "description": "Unique identifier for the test (deck). Example: 'at://irt.example.com/test/1'."
        },
        "title": {
          "type": "string",
          "description": "Human-readable title of the test (deck)."
        },
        "description": {
          "type": "string",
          "description": "Brief description of the test (deck)."
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Tags for categorization (e.g., ['math', 'algebra'])."
        },
        "createdAt": {
          "type": "string",
          "format": "datetime",
          "description": "When the test (deck) was created."
        },
        "itemOrder": {
          "type": "string",
          "description": "Ordering of items (questions) in the test. Comma-separated groups are unordered; semicolon-separated groups are ordered. Example: 'item1,item2;item3' means item1 and item2 can appear in any order, but item3 must come after them."
        },
        "isPublic": {
          "type": "boolean",
          "description": "Whether the test (deck) is public (true) or private/encrypted (false)."
        },
        "author": {
          "type": "string",
          "format": "did",
          "description": "DID of the author/creator of the test (deck)."
        }
      }
    },
    "item": {
      "type": "record",
      "description": "A reusable item (formerly 'question') in IRT terminology. Can be open-ended, multiple-choice, or AI-graded.",
      "required": ["id", "itemType", "prompt", "correctAnswers"],
      "properties": {
        "id": {
          "type": "string",
          "format": "at-identifier",
          "description": "Unique identifier for the item. Example: 'at://irt.example.com/item/1'."
        },
        "prompt": {
          "type": "string",
          "description": "The actual text/prompt of the item (e.g., 'What is the capital of France?')."
        },
        "correctAnswers": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Correct answer(s) for the item. "
        },
        "deflectors": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Incorrect options for 'multipleChoice' items (deflectors). If present, the item is automatically 'multipleChoice'."
        },
        "reference": {
          "type": "object",
          "description": "Structured reference to related ATProto content.",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["bluesky/post", "bluesky/video", "whitewind/video", "other"],
              "description": "Type of ATProto content."
            },
            "uri": {
              "type": "string",
              "format": "at-identifier",
              "description": "URI of the ATProto content."
            },
          }
        }
      }
    },
    "response": {
      "type": "record",
      "description": "A user's response to an item in a test (deck).",
      "required": ["id", "user", "itemId", "testId", "response", "isCorrect"],
      "properties": {
        "id": {
          "type": "string",
          "format": "at-identifier",
          "description": "Unique identifier for the response."
        },
        "user": {
          "type": "string",
          "format": "did",
          "description": "DID of the user who responded."
        },
        "itemId": {
          "type": "string",
          "format": "at-identifier",
          "description": "Reference to the item (question)."
        },
        "testId": {
          "type": "string",
          "format": "at-identifier",
          "description": "Reference to the test (deck)."
        },
        "response": {
          "type": "string",
          "description": "User's exact response (text or selected option ID)."
        },
        "isCorrect": {
          "type": "boolean",
          "description": "Whether the response was correct."
        },
        },
        "timestamp": {
          "type": "string",
          "format": "datetime",
          "description": "When the response was recorded."
        }
      }
    },
}
